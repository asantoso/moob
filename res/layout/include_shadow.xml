<?xml version="1.0" encoding="utf-8"?>


<merge
  xmlns:android="http://schemas.android.com/apk/res/android" 
    xmlns="http://schemas.android.com/apk/res/android"
    	android:id="@+id/row_border_highlight"
   		android:layout_width="fill_parent"
   	    android:layout_height="fill_parent"       	
       	android:visibility="visible"
       	>
     
     
 <ImageView 
 android:id="@+id/redline_top"
 android:layout_width="fill_parent"
 android:layout_height="1dip" 
 android:background="#88777777"
 android:layout_alignParentTop="true">
 </ImageView>
 
 
 <ImageView
 android:id="@+id/yellowline_top" 
 android:layout_width="fill_parent"
 android:layout_height="1dip" 
 android:background="#88ffffff"
 android:layout_below="@+id/redline_top">
 </ImageView>
 
  <ImageView 
  android:id="@+id/yellowline_bottom"
 android:layout_width="fill_parent"
 android:layout_height="2dip" 
 android:background="#88ffffff"
 android:layout_above="@+id/redline_bottom">
 </ImageView>
 
  <ImageView 
 android:id="@+id/redline_bottom"
 android:layout_width="fill_parent"
 android:layout_height="2dip" 
 android:background="#99777777"
 android:layout_alignParentBottom="true">
 </ImageView>
 
    
    </merge>
 