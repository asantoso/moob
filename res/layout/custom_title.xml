<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:gravity="left|center_vertical"
android:layout_width="fill_parent" 
android:layout_height="48dip"
android:background="@drawable/title_bg"
android:id="@+id/topheader_container"
> 


<TextSwitcher   
	android:id="@+id/topheader" 
	android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
    android:gravity="center_vertical|center_horizontal"   
    android:inAnimation="@anim/bottom_to_middle"
    android:outAnimation="@anim/middle_to_top"     
   />   
   
<ImageView
	android:id="@+id/th_image" 
	android:layout_width="44dip" 
    android:layout_height="44dip"
    android:scaleType="centerCrop"
    android:gravity="left"   
    android:layout_gravity="left|center_vertical"
    android:src="@drawable/moob_logo_48"
/>
   
<ProgressBar android:id="@+id/loadingindicator"
		android:layout_width="20dip"  
		android:layout_height="20dip"
		android:layout_alignParentRight="true"
		android:layout_gravity="center_vertical|right"		
		android:layout_marginTop="3dip"
		android:layout_marginRight="2dip"
		android:focusable="false"
		android:visibility="invisible" />
		    
</RelativeLayout>
