<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="2dp"
    android:paddingTop="0.5dp"
    android:paddingLeft="0.6dp"
    android:paddingRight="0.6dp"  
    
>  

<ImageView 
	android:id="@+id/profile_pic"     
	android:layout_width="48dp" 
    android:layout_height="48dp"
    android:layout_marginTop="1.5dp"
    android:layout_marginLeft="2.5dp"
    
    android:padding="2dp"    
	android:adjustViewBounds="true"	
	android:scaleType="centerCrop"
	
	android:background="@drawable/stream_profile_background"	    
    />
    
<TextView      
    android:id="@+id/name"                                     
    
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent"
    android:layout_marginLeft="0dp"
   	android:layout_marginRight="5.5dp"
    android:layout_marginTop="0dp"  
    android:layout_marginBottom="0dp"
        
    android:layout_toRightOf="@+id/profile_pic"
    android:layout_alignTop="@+id/profile_pic"      
    
    android:minLines="1"
    android:maxLines="3"
  	android:background="#00000000"
         
    style="@style/text.name" 
    
    android:gravity="center_vertical|right"   
      
    >
</TextView>
   
<TextView      
    android:id="@+id/comment"                                     
    
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent"
	android:layout_marginRight="2.5dp"
    android:layout_marginLeft="2.5dp"
    android:layout_marginTop="2.5dp" 
    android:layout_marginBottom="3.5dp"   
    
    android:layout_below="@+id/profile_pic"
    android:layout_alignParentLeft="true"
    
    android:textSize="11.5dp"    
    android:textColor="#FF444444"
    android:textScaleX="1.05"
    android:textStyle="bold"
	android:typeface="sans"
	
    android:gravity="center_vertical|left"
    android:minLines="1"       
    
    android:paddingLeft="5dip"
    android:paddingRight="5dip"
    
    android:background="@drawable/comment_message_box"                 
/>

<TextView      
    android:id="@+id/time"                                     
    
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content"
    android:layout_marginLeft="3dp"
   	android:layout_marginRight="5.5dp"
    android:layout_marginTop="0dp"  
    android:layout_marginBottom="0dp"

   	android:layout_above="@+id/comment"
   	android:layout_alignParentRight="true"
    android:text="1 hr ago"    
  
  	android:textScaleX="1.07"    
    android:textSize="10dp"
    android:textStyle="bold"
    android:lines="1"
  	android:background="#00000000"
    android:textColor="#FF555555"
    
    android:gravity="top|right"      
/>


    
</RelativeLayout>